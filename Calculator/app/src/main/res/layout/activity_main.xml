<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity">

 <TextView
     android:layout_width="360dp"
     android:layout_height="105dp"
     android:background="@drawable/textfeild"
     android:id="@+id/textview1"
     android:textSize="40sp"
     android:textColor="#FFFFFF">

 </TextView>

    <TextView
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:id="@+id/textview2"
        android:background="@drawable/textfeild"
        android:textSize="40sp"
        android:layout_below="@+id/textview1"
        android:textColor="#FFFFFF">
    </TextView>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="AC"
        android:textSize="25sp"
        android:textColor="@color/design_default_color_surface"
        android:id="@+id/buttonClear"
        android:layout_below="@id/textview2">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="Return"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="@color/design_default_color_surface"
        android:id="@+id/buttonBackspace"
        android:layout_below="@id/textview2">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="%"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/design_default_color_surface"
        android:id="@+id/buttonPercent"
        android:layout_below="@id/textview2">
    </Button>
    <Button
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:text="/"
        android:paddingLeft="2dp"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:textColor="@color/design_default_color_surface"
        android:id="@+id/buttonDivide"
        android:layout_below="@id/textview2">
    </Button>

   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="9"
       android:textSize="25sp"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button9"
       android:layout_below="@id/buttonClear">
   </Button>
   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="8"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonClear"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button8"
       android:layout_below="@id/buttonBackspace">
   </Button>
   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="7"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonBackspace"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button7"
       android:layout_below="@id/buttonDivide">
   </Button>
   <Button
       android:layout_width="96dp"
       android:layout_height="88dp"
       android:text="*"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonPercent"
       android:textColor="@color/design_default_color_surface"
      android:id="@+id/buttonMultipy"
       android:layout_below="@id/buttonDivide">
   </Button>

   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="6"
       android:textSize="25sp"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button6"
       android:layout_below="@id/button9">
   </Button>
   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="5"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonClear"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button5"
       android:layout_below="@id/button8">
   </Button>
   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="4"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonBackspace"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button4"
       android:layout_below="@id/button7">
   </Button>
   <Button
       android:layout_width="96dp"
       android:layout_height="88dp"
       android:text="-"
       android:paddingLeft="2dp"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonPercent"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/buttonSubtract"
       android:layout_below="@id/buttonMultipy">
   </Button>

   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="3"
       android:textSize="25sp"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button3"
       android:layout_below="@id/button6">
   </Button>
   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="2"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonClear"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button2"
       android:layout_below="@id/button5">
   </Button>
   <Button
       android:layout_width="88dp"
       android:layout_height="88dp"
       android:text="1"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonBackspace"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/button1"
       android:layout_below="@id/button4">
   </Button>
   <Button
       android:layout_width="96dp"
       android:layout_height="88dp"
       android:text="+"
       android:textSize="25sp"
       android:layout_toRightOf="@+id/buttonPercent"
       android:textColor="@color/design_default_color_surface"
       android:id="@+id/buttonPlus"
       android:layout_below="@id/buttonSubtract">
   </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="0"
        android:textSize="25sp"
        android:textColor="@color/design_default_color_surface"
        android:id="@+id/button0"
        android:layout_below="@id/button3">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="."
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="@color/design_default_color_surface"
        android:id="@+id/buttonDot"
        android:layout_below="@id/button2">
    </Button>
    <Button
        android:layout_width="184dp"
        android:layout_height="88dp"
        android:text="="
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/white"
        android:id="@+id/buttonEqual"
        android:layout_below="@id/button1">
    </Button>
</RelativeLayout>